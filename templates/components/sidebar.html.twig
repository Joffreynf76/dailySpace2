
    <section class="content">
        <aside>
            <div class="espace-utilisateur">

                <div class="info-user">Infos Utilisateur{% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <p>{{ app.user.mail }}</p>
                    <p>{{ app.user.nom }} {{ app.user.prenom }}</p>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('add_article') }}">Ajouter un article</a></li>
                        <li><a href="{{ path('add_event') }}">Ajouter un évenement</a></li>
                        <li><a href="{{ path('index_email') }}">Envoyer newsletter</a> </li>
                    {% endif %}
                    <li><a href="{{ path('deconnexion') }}">Déconnexion</a></li>
                    {% else %}
                        <li><a href="{{ url('security_connexion') }}">Connexion</a></li>
                    <li><a href="{{ url ('inscription') }}">Inscription</a></li>
                    {% endif %}</div>
                <div class="register"></div>
                <div class="login-logout"></div>
                <div class="registration-form">

                </div>
            </div>
            <div class="wrapper">
                <div class="search-container">
                    <a href="#/search" class="search-button">
                        <i class="fa fa-search"></i>
                    </a>
                    <input type="text" placeholder="Votre recherche...">
                </div>
            </div>
            <div class="events">
                <h3>Les prochains évenements</h3>
                    {% for evenement in evenements %}
                        <div class="entry1">
                            <p>{{ evenement.titre }}</p>
                            <h4>{{ evenement.date | date('d/m/Y') }}</h4>
                        </div>
                    {% endfor %}

            </div>


</aside>